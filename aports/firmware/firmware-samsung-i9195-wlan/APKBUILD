pkgdesc="Firmware for Samsung Galaxy S4 Mini LTE"
url="https://github.com/j0ki/firmware-samsung-i9195"
url2="https://github.com/LineageOS/android_device_samsung_serrano-common"
arch="noarch"
license="proprietary"
depends="wcnss-wlan"
options="!check !strip !archcheck"

# Source
_commit_1="f3c513732580e500fe27000683db268406806ed7"
_files_1="wcnss.b00 wcnss.b01 wcnss.b02 wcnss.b04 wcnss.b05 wcnss.b06 wcnss.mdt"

_commit_2="fb69a737df5f13c2975fd385a15908389fe5d5bd"
_files_2="WCNSS_cfg.dat WCNSS_qcom_cfg.ini WCNSS_qcom_wlan_nv.bin"

for _i in $_files_1; do
	source="$source $_i::$url/raw/$_commit_1/$_i";
done

for _i in $_files_2; do
	source="$source $_i::$url2/raw/$_commit_2/prima/$_i";
done

package() {
	for _i in $_files_1; do
		install -Dm644 "$srcdir/$_i" \
			"$pkgdir/lib/firmware/postmarketos/$_i"
	done
	for _i in $_files_2; do
		install -Dm644 "$srcdir/$_i" \
			"$pkgdir/lib/firmware/postmarketos/wlan/prima/$_i"
	done
}
